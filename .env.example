# MQTT Configuration for Aquapark Monitor
# Copy this file to .env and update with your actual values

# MQTT Broker (Home Assistant IP or hostname)
SWIM_MQTT_BROKER=homeassistant.local

# MQTT Port
SWIM_MQTT_PORT=1883

# MQTT Username
SWIM_MQTT_USERNAME=mqtt_user

# MQTT Password
SWIM_MQTT_PASSWORD=mqtt_password

# MQTT Topic Prefix
SWIM_MQTT_TOPIC_PREFIX=aquapark

# Sleep interval between checks in seconds (default: 300 = 5 minutes)
SWIM_SLEEP_INTERVAL=300
